[sub_resource type="Shader" id=1]
code = "shader_type canvas_item;

uniform float saturation = 1.0;
uniform float r_value = 1.0;
uniform float b_value=1.0;
uniform float g_value=1.0;

uniform float x_off = 1.0;
uniform float y_off = 1.0;
uniform float z_off = 1.0;

uniform float speed = 1.0;
uniform float strenght = 10.0;

void vertex()
{

}

void fragment()
{
	vec4 col = texture(TEXTURE,SCREEN_UV).rgba;
	
		//this bumps color
	col.r *= r_value;
	col.b *= b_value;
	col.g *= g_value;
	
	float medium = (col.r+col.g+col.b)/3.0;
	
	//this makes grayscale
	col.r = (medium *(1.0-r_value)) + col.r*r_value ;
	col.g = (medium *(1.0-g_value)) + col.g*g_value ;
	col.b = (medium *(1.0-b_value)) + col.b*b_value ;
	

	
	COLOR.rgba = col.rgba*saturation;
	}"

